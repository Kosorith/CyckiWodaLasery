<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.lodz.p.ftims.geocaching.Dodaj_wskazowke_2"
    android:background="@drawable/tlo_aplikacja">

    <TextView
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/DNW2_wskazówki"
        android:id="@+id/Wskazowki_text"
        android:layout_x="36dp"
        android:layout_y="13dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DNW2_Dodaj_wskazowke"
        android:id="@+id/Dodaj_wskazowke_text"
        android:layout_x="20dp"
        android:layout_y="92dp"
        android:onClick="Dodaj_wskazowke"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DNW2_Zatwierdź"
        android:id="@+id/Zatwierdź_wyzwanie"
        android:layout_x="132dp"
        android:layout_y="426dp"
        android:onClick="CzyChceszZatwierdzić"/>

    <Button
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="@string/DNW2_cofnij"
        android:id="@+id/Wstecz"
        android:layout_x="13dp"
        android:layout_y="426dp"
        android:onClick="Cofnij_W2"/>

    <ScrollView
        android:layout_width="337dp"
        android:layout_height="252dp"
        android:id="@+id/scrollView3"
        android:layout_x="-43dp"
        android:layout_y="154dp" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="NR"
                    android:id="@+id/textView1" />

                <TextView
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="OPIS"
                    android:id="@+id/textView11"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="ODLEGLOSC/KORDY"
                    android:id="@+id/textView12"
                    android:layout_column="2" />
            </TableRow>

            </TableLayout>
    </ScrollView>
</AbsoluteLayout>
