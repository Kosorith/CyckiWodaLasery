<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Logowanie"
    android:background="@drawable/tlo_pierwotne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Nazwa_Aplikacji"
        android:id="@+id/textView"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff3447ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/podaj_login"
        android:ems="10"
        android:id="@+id/Pole_Login"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColorHighlight="#ff4c93ff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Pole_Haslo"
        android:text="@string/podaj_haslo"
        android:layout_below="@+id/Pole_Login"
        android:layout_alignLeft="@+id/Pole_Login"
        android:layout_alignStart="@+id/Pole_Login"
        android:textColorHighlight="#ff4c93ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Login"
        android:id="@+id/Login_Text"
        android:layout_toStartOf="@+id/Pole_Login"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Haslo_Text"
        android:layout_alignStart="@+id/Haslo_Text"
        android:textColor="#ff3447ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Haslo"
        android:id="@+id/Haslo_Text"
        android:layout_alignBottom="@+id/Pole_Haslo"
        android:layout_toLeftOf="@+id/Pole_Login"
        android:layout_toStartOf="@+id/Pole_Login"
        android:layout_alignTop="@+id/Pole_Haslo"
        android:textColor="#ff3447ff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Zapamietac_Dane"
        android:id="@+id/Zapamietac"
        android:layout_below="@+id/Pole_Haslo"
        android:layout_alignLeft="@+id/Pole_Haslo"
        android:layout_alignStart="@+id/Pole_Haslo"
        android:checked="false"
        android:textColor="#ff3447ff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Zatwierdz"
        android:id="@+id/OK"
        android:layout_below="@+id/Zapamietac"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/Haslo_Text"
        android:layout_toEndOf="@+id/Haslo_Text" />
</RelativeLayout>
